
/**
 * a subclass of item that the player will equip
 * @author Deus
 * @version 0.1_8
 */
public class Gear extends Item{
	public static final String[] ITEMTYPE = {
		"2hweapon", "mhweapon", "1hweapon", "shield", "helm", "shoulders", "chest", "gloves", "pants",
		"boots"
		}; //used to make sure items are of a valid type
	private Damnage damage;
	private int defense;
	private int magicBonus;
	private String equipSpot;
	private String statBonus;
	
	/**
	 * default constructor for Gear
	 */
	public Gear()
	{
		super();
		damage = new Damage();
		setDefense(0);
		setMagicBonus(0);
		setType("")
		setEquipSpot()
		setStatBonus("none", 0);
	}
	
	/**
	 * constructor for making various pieces of gear that can be equipped
	 */
	public Gear(double weight, int value, String name, int dice, int sides, int plus, int defense, int magicBonus, String type String statToMod, int statMod)
	{
		super(weight, value, name);
		damage = new Damage(dice, sides, plus);
		setDefense(defense);
		setMagicBonus(magicBonus);
		setType(type);
		setEquipSpot();
		setStatBonus(statToMod, statMod);
	}
}
