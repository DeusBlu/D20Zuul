	private String[] EFFECT = {
			"damage", "healing"
	}
	private int charges;
	private String effect;
	private int effectValue;
	private String type;

	public MagicDevice() {
		super();
		
	}

	public MagicDevice(double weight, int value, String name) {
		super(weight, value, name);
		// TODO Auto-generated constructor stub
	}

}
