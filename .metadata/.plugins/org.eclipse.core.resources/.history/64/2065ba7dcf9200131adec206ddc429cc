/**
 * provides an interface for a player to create their character
 * @author DeusBlu
 * @version 0.1_8
 *
 */
public class CreatePlayer 
{
	private InputReader reader;
	private String name;
	private int age;
	private int str;
	private int dex;
	private int con;
	private int intel;
	private int wis;
	private int chr;
	
	
	public CreatePlayer()
	{
		reader = new InputReader();
	}
	
	public void start()
	{
		System.out.println("Hello traveler, welcome to the land of UNKNOWN!");
		System.out.println("\nThese lands are dangerous and we need a name");
		System.out.print(" to put on your Tombstone");
		getName();
	}
	
	public void getName()
	{
		boolean done = false;
		while(!done){
			System.out.print(">");
			String name = reader.readString();
			if(name!= null && !name.isEmpty()){
				this.name = name;
				done = true;
			}
			else{
				System.out.println("Your name cannot be empty");
			}
		}
	}
}
